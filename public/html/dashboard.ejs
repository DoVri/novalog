<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GTFS Login</title>
    <link rel="icon" type="image/png"
        href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
        sizes="16x16" />

    <!-- Pixel Font -->
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">

    <!-- Tailwind CSS (for layout utilities) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        :root {
            --gt-blue: #88CCFF;
            --gt-green: #76CD26;
            --gt-brown: #604020;
            --gt-tan: #EEDC9D;
            --gt-border: #3F2814;
        }

        body {
            font-family: 'VT323', monospace;
            background-color: var(--gt-blue);
            background-image:
                linear-gradient(rgba(255, 255, 255, 0.2) 2px, transparent 2px),
                linear-gradient(90deg, rgba(255, 255, 255, 0.2) 2px, transparent 2px);
            background-size: 40px 40px;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        /* Pixel Box Container */
        .pixel-box {
            background-color: var(--gt-tan);
            border: 4px solid var(--gt-border);
            box-shadow:
                8px 8px 0px rgba(0, 0, 0, 0.2),
                inset 4px 4px 0px rgba(255, 255, 255, 0.5),
                inset -4px -4px 0px rgba(0, 0, 0, 0.1);
            position: relative;
            max-width: 450px;
            width: 90%;
            padding: 2rem;
        }

        /* Corner decorations */
        .pixel-box::before,
        .pixel-box::after {
            content: '';
            position: absolute;
            width: 8px;
            height: 8px;
            background: var(--gt-border);
            transition: all 0.3s ease;
        }

        .pixel-box::before {
            top: -4px;
            left: -4px;
            box-shadow: 4px 4px 0 var(--gt-tan);
        }

        .pixel-box::after {
            bottom: -4px;
            right: -4px;
            box-shadow: -4px -4px 0 var(--gt-tan);
        }

        .title-text {
            color: var(--gt-brown);
            text-shadow: 2px 2px 0px rgba(255, 255, 255, 0.5);
            font-size: 3rem;
            line-height: 1;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        /* Pixel Input */
        .pixel-input {
            width: 100%;
            background: #FFF;
            border: 4px solid var(--gt-border);
            padding: 10px 15px;
            font-family: 'VT323', monospace;
            font-size: 1.5rem;
            color: var(--gt-brown);
            outline: none;
            margin-bottom: 1rem;
            box-shadow: inset 4px 4px 0px rgba(0, 0, 0, 0.1);
            transition: transform 0.1s;
        }

        .pixel-input:focus {
            transform: scale(1.02);
            border-color: var(--gt-green);
        }

        /* Pixel Button */
        .pixel-btn {
            width: 100%;
            background: var(--gt-green);
            border: 4px solid #3E6E12;
            color: white;
            font-family: 'VT323', monospace;
            font-size: 1.8rem;
            padding: 10px;
            cursor: pointer;
            text-shadow: 2px 2px 0px rgba(0, 0, 0, 0.3);
            box-shadow:
                inset 4px 4px 0px rgba(255, 255, 255, 0.3),
                inset -4px -4px 0px rgba(0, 0, 0, 0.2),
                4px 4px 0px rgba(0, 0, 0, 0.2);
            position: relative;
            transition: all 0.1s;
        }

        .pixel-btn:active {
            transform: translate(4px, 4px);
            box-shadow: none;
        }

        .pixel-btn:hover {
            filter: brightness(1.1);
        }

        .pixel-link {
            display: block;
            text-align: center;
            color: var(--gt-brown);
            margin-top: 1rem;
            font-size: 1.2rem;
            text-decoration: underline;
            cursor: pointer;
        }

        .pixel-link:hover {
            color: #000;
        }

        /* Floating Animation */
        .float-anim {
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        /* Clouds */
        .cloud {
            position: absolute;
            background: white;
            border-radius: 20px;
            opacity: 0.8;
            z-index: -1;
        }

        .c1 {
            width: 100px;
            height: 40px;
            top: 10%;
            left: 10%;
            animation: drift 20s linear infinite;
        }

        .c2 {
            width: 140px;
            height: 60px;
            top: 20%;
            right: 15%;
            animation: drift 25s linear infinite reverse;
        }

        .c3 {
            width: 80px;
            height: 30px;
            bottom: 15%;
            left: 20%;
            animation: drift 18s linear infinite;
        }

        @keyframes drift {
            from {
                transform: translateX(-20px);
            }

            to {
                transform: translateX(20px);
            }
        }
    </style>
</head>

<body>

    <!-- Decorative Clouds -->
    <div class="cloud c1"></div>
    <div class="cloud c2"></div>
    <div class="cloud c3"></div>

    <div class="pixel-box float-anim">
        <h1 class="title-text">GTFS LOGIN</h1>

        <!-- Login Form -->
        <form method="POST" action="/player/growid/login/validate" autocomplete="off">
            <input name="_token" type="hidden" value="[object Object]" />

            <div class="mb-4">
                <input id="login-name" class="pixel-input" placeholder="GrowID" name="growId" type="text" required />
            </div>

            <div class="mb-6">
                <input id="password" class="pixel-input" placeholder="Password" name="password" type="password"
                    required />
            </div>

            <button type="submit" class="pixel-btn">ENTER WORLD</button>
        </form>

        <!-- Register Link Form -->
        <form method="POST" action="/player/growid/login/validate" class="mt-4">
            <input name="_token" type="hidden" value="" />
            <input name="growId" type="hidden" value="" />
            <input name="password" type="hidden" value="" />
            <button type="submit" class="pixel-link bg-transparent border-0 w-full">
                Don't have a GTFS ID? Register here!
            </button>
        </form>
    </div>

    <!-- Scripts preserved from original -->
    <script
        src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/jquery/jquery-2.1.4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Auto-focus username
            $('#login-name').focus();

            // Prevent dev tools
            document.onkeydown = e => {
                if (e.key == 123 || e.key == 'F12') e.preventDefault();
                if (e.ctrlKey && e.shiftKey && (e.key == 'I' || e.key == 'C' || e.key == 'J')) e.preventDefault();
                if (e.ctrlKey && (e.key == 'I' || e.key == 'U')) e.preventDefault();
            };

            // LocalStorage logic
            if (localStorage.getItem('growId')) {
                document.getElementById('login-name').value = localStorage.getItem('growId');
            }

            // Save on submit
            $('form').first().on('submit', function () {
                localStorage.setItem('growId', document.getElementById('login-name').value);
            });
        });
    </script>
</body>

</html>
